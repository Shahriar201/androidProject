<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#148e73"
    tools:context=".MainActivity">

    <AnalogClock
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bangladeshButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/bangladesh_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/bd_icon"
        style="@style/Widget.AppCompat.Button.Colored"
        />

    <Button
        android:id="@+id/indiaButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/india_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/india_icon"
        />

    <Button
        android:id="@+id/pakistanButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/pakistan_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/pakistan_icon"
        />

</LinearLayout>